<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE properties SYSTEM 'http://java.sun.com/dtd/properties.dtd'>
<properties>
    <!-- Configuración básica del servidor -->
    <entry key='web.port'>8082</entry>
    <entry key='web.path'>/opt/traccar/web</entry>
    
    <!-- Base de datos H2 integrada -->
    <entry key='database.driver'>org.h2.Driver</entry>
    <entry key='database.url'>jdbc:h2:/opt/traccar/data/database</entry>
    <entry key='database.user'>sa</entry>
    <entry key='database.password'></entry>
    
    <!-- Puertos GPS -->
    <entry key='teltonika.port'>5055</entry>
    <entry key='gps103.port'>5001</entry>
    <entry key='tk103.port'>5002</entry>
    <entry key='gl200.port'>5003</entry>
    <entry key='gl100.port'>5004</entry>
    
    <!-- ========== CONFIGURACIÓN DE WEBHOOKS ========== -->
    <entry key='notificator.webhook.url'>http://backend:5000/api/traccar-webhook</entry>
    <entry key='notificator.webhook.headers'>Content-Type: application/json
X-Webhook-Token: mi-token-secreto-123</entry>
    <entry key='notificator.webhook.retries'>3</entry>
    <entry key='notificator.webhook.timeout'>30</entry>
    
    <!-- ========== CONFIGURACIÓN DE LOGS ========== -->
    <entry key='logger.enable'>true</entry>
    <entry key='logger.level'>info</entry>
    <entry key='logger.file'>/opt/traccar/logs/tracker-server.log</entry>
    
    <!-- ========== CONFIGURACIÓN DE SEGURIDAD ========== -->
    <entry key='web.new.users'>false</entry>
    <entry key='web.timeout'>3600</entry>
    
    <!-- ========== CONFIGURACIÓN DE GEOCODING ========== -->
    <entry key='geocoder.enable'>true</entry>
    <entry key='geocoder.type'>nominatim</entry>
    <entry key='geocoder.url'>https://nominatim.openstreetmap.org/reverse</entry>
    
    <!-- ========== CONFIGURACIÓN DE MAPA ========== -->
    <entry key='web.application.title'>Qarpana GPS Tracking</entry>
    <entry key='map.type'>osm</entry>
    <entry key='coordinates.format'>dd</entry>
    <entry key='location.latitude'>-31.4201</entry>
    <entry key='location.longitude'>-64.1888</entry>
    <entry key='location.zoom'>10</entry>
    
    <!-- ========== CONFIGURACIÓN DE EVENTOS ========== -->
    <entry key='event.geofence.enable'>true</entry>
    <entry key='event.alarm.enable'>true</entry>
    <entry key='event.motion.enable'>true</entry>
    
    <!-- ========== CONFIGURACIÓN DE NOTIFICACIONES ========== -->
    <entry key='notificator.types'>web</entry>
    
    <!-- ========== CONFIGURACIÓN DE PERFORMANCE ========== -->
    <entry key='database.checkInterval'>3600</entry>
    <entry key='web.maxFormContentSize'>1048576</entry>
    
    <!-- ========== CONFIGURACIÓN DE PROTOCOLOS GPS ========== -->
    <entry key='teltonika.enable'>true</entry>
    <entry key='teltonika.extended'>false</entry>
    <entry key='protocol.timeout'>120</entry>
    
    <!-- ========== CONFIGURACIÓN DE PRODUCCIÓN ========== -->
    <entry key='web.debug'>false</entry>
</properties>